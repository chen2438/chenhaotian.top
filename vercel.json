{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/random-image",
      "dest": "/api/random-image.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
